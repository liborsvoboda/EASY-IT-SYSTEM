<UserControl
    x:Class="EasyITSystemCenter.Pages.WebMenuListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:EasyITSystemCenter.Pages"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:web="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Name="Form"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    d:DesignHeight="500"
    d:DesignWidth="600"
    Tag="Form"
    mc:Ignorable="d">

    <Grid
        Margin="0"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="{DynamicResource AccentColorBrush}">
        <Grid x:Name="ListView" Visibility="Visible">
            <DataGrid
                x:Name="DgListView"
                Width="{Binding Path=ActualWidth, ElementName=Form}"
                Height="{Binding Path=ActualHeight, ElementName=Form}"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                AutoGenerateColumns="True"
                AutoGeneratedColumns="DgListView_Translate"
                IsReadOnly="True"
                MouseDoubleClick="DgListView_MouseDoubleClick"
                SelectionChanged="DgListView_SelectionChanged"
                SelectionMode="Single" />
        </Grid>

        <Grid
            x:Name="ListForm"
            Background="{DynamicResource LightColorBrush}"
            Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="45" />
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <UniformGrid
                Grid.RowSpan="9"
                Columns="0"
                Rows="0">
                <ListView
                    x:Name="lb_dataList"
                    Margin="2"
                    BorderThickness="1"
                    MouseDoubleClick="DataListDoubleClick"
                    ToolTip="Double click for Insert Template to End">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn
                                x:Name="lb_idColumn"
                                Width="30"
                                DisplayMemberBinding="{Binding Id}" />
                            <GridViewColumn
                                x:Name="lb_nameColumn"
                                Width="260"
                                DisplayMemberBinding="{Binding Name}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </UniformGrid>

            <Label
                x:Name="lbl_id"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <mah:NumericUpDown
                x:Name="txt_id"
                Grid.Row="0"
                Grid.Column="2"
                Margin="0,2,0,2"
                HorizontalContentAlignment="Left"
                mah:TextBoxHelper.ClearTextButton="False"
                mah:TextBoxHelper.Watermark=""
                HideUpDownButtons="True"
                IsEnabled="False"
                ToolTip="This unique identificator is read only value which is filled automatically by system" />

            <Label
                x:Name="lbl_sequence"
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <mah:NumericUpDown
                x:Name="txt_sequence"
                Grid.Row="1"
                Grid.Column="2"
                Margin="0,2,0,2"
                HorizontalContentAlignment="Left"
                mah:TextBoxHelper.ClearTextButton="False"
                mah:TextBoxHelper.Watermark=""
                HideUpDownButtons="False"
                Interval="10"
                NumericInputMode="Numbers"
                ToolTip="Sequence for same table mst be unique" />

            <Label
                x:Name="lbl_parentId"
                Grid.Row="2"
                Grid.Column="1"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <ComboBox
                x:Name="cb_parentId"
                Grid.Row="2"
                Grid.Column="2"
                Margin="0,2,0,2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                mah:TextBoxHelper.ClearTextButton="false"
                mah:TextBoxHelper.IsWaitingForData="True"
                DisplayMemberPath="Name"
                IsEnabled="true"
                SelectedValuePath="Id" />

            <Label
                x:Name="lbl_name"
                Grid.Row="3"
                Grid.Column="1"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_name"
                Grid.Row="3"
                Grid.Column="2"
                Margin="0,2,0,2"
                mah:TextBoxHelper.ClearTextButton="true"
                mah:TextBoxHelper.IsWaitingForData="True"
                mah:TextBoxHelper.Watermark="" />

            <Label
                x:Name="lbl_menuClass"
                Grid.Row="4"
                Grid.Column="1"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_menuClass"
                Grid.Row="4"
                Grid.Column="2"
                Margin="0,2,0,2"
                mah:TextBoxHelper.ClearTextButton="true"
                mah:TextBoxHelper.IsWaitingForData="True"
                mah:TextBoxHelper.Watermark="" />

            <Label
                x:Name="lbl_description"
                Grid.Row="5"
                Grid.Column="1"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_description"
                Grid.Row="5"
                Grid.Column="2"
                Margin="0,2,0,2"
                mah:TextBoxHelper.ClearTextButton="True"
                mah:TextBoxHelper.Watermark=""
                AcceptsReturn="True"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Visible" />

            <Label
                x:Name="lbl_active"
                Grid.Row="6"
                Grid.Column="2"
                Margin="15,3,30,2"
                Padding="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Left" />

            <CheckBox
                x:Name="chb_active"
                Grid.Row="6"
                Grid.Column="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Top" />

            <Label
                x:Name="lbl_userMenu"
                Grid.Row="6"
                Grid.Column="2"
                Margin="0,0,30,2"
                Padding="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Right" />
            <CheckBox
                x:Name="chb_userMenu"
                Grid.Row="6"
                Grid.Column="2"
                Margin="115,2,0,2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                ToolTip="Shown to All Logged Users" />

            <Label
                x:Name="lbl_adminMenu"
                Grid.Row="6"
                Grid.Column="2"
                Margin="0,12,30,2"
                Padding="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                HorizontalContentAlignment="Right" />

            <CheckBox
                x:Name="chb_adminMenu"
                Grid.Row="6"
                Grid.Column="2"
                Margin="0,0,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                ToolTip="Shown to logged Admin only" />


            <web:WebView2
                x:Name="webBrowser"
                Grid.Row="7"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Margin="0,2,0,2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                AllowExternalDrop="False" />


            <Label
                x:Name="lbl_default"
                Grid.Row="8"
                Grid.Column="2"
                Margin="0,2,25,2"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Left" />
            <CheckBox
                x:Name="chb_default"
                Grid.Row="8"
                Grid.Column="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center" />

            <Button
                Name="btn_save"
                Grid.Row="9"
                Grid.Column="0"
                Width="80"
                Height="40"
                Margin="10,0,0,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Click="BtnSave_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />

            <!--<Button
                Name="btn_saveAsNew" Grid.Row="9" Grid.Column="2" Width="200" Height="40"
                Margin="20,0,0,10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="BtnSaveAsNew_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />-->

            <Button
                Name="btn_saveClose"
                Grid.Row="9"
                Grid.Column="2"
                Width="200"
                Height="40"
                Margin="0,0,270,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="BtnSaveClose_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />

            <Button
                Name="btn_cancel"
                Grid.Row="9"
                Grid.Column="2"
                Width="200"
                Height="40"
                Margin="44,0,24,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="BtnCancel_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />
        </Grid>
    </Grid>
</UserControl>